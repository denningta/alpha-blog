<%= render "shared/errors", obj: @user %>

<div class="container">
<%= form_for @user do |f| %>
  <div class="row form-group">
    <!-- <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label> -->
    <div class="col-sm text-right">
        <%= f.label :username, class: "col-form-label" %>
    </div>
    <div class="col-sm-8">
      <!-- <input type="email" class="form-control" id="inputEmail3"> -->
      <%= f.text_field :username, class: "form-control", placeholder: "Enter username" %>
    </div>
    <div class="col-sm">
    </div>
  </div>
  <div class="row form-group">
    <!-- <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label> -->
    <div class="col-sm text-right">
        <%= f.label :email, class: "col-form-label" %>    
    </div>
    <div class="col-sm-8">
      <!-- <input type="password" class="form-control" id="inputPassword3"> -->
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
    </div>
    <div class="col-sm">
    </div>

  </div>
  <div class="row form-group">
    <!-- <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label> -->
    <div class="col-sm text-right">
        <%= f.label :password, class: "col-form-label" %>    
    </div>
    <div class="col-sm-8">
      <!-- <input type="password" class="form-control" id="inputPassword3"> -->
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
    </div>
    <div class="col-sm">
    </div>

  </div>
  <div class="form-group row">
    <div class="col-sm-2 col-form-label"></div>
    <div class="col-sm-10">
      <!-- <button type="submit" class="btn btn-primary">Sign in</button> -->
      <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account", class: "btn btn-primary") %>
    </div>
  </div>
<% end %>
</div>


<%= link_to "[ Cancel request and return to article listing ]", articles_path %>