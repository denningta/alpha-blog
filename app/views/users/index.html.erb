<h1 align="center">All Alpha Bloggers</h1>
<div class="row">
    <div class="mx-auto">
        <%= will_paginate %>
    </div>
</div>
<% @users.each do |user| %>
    <ul class="listing">
        <div class="row">
            <div class="card user-list col-md-4 offset-md-4">
                <div class="card-body">
                    <li>
                        <%= link_to gravatar_for(user), user_path(user) %>
                    </li>
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>
                    <li>
                        <small><%= pluralize(user.articles.count, "article") if user.articles %></small>
                    </li>
                    <% if logged_in? and current_user.admin? %>
                        <li><%= link_to "Delete User", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all articles?" } %></li>
                    <% end %>
                </div>
            </div>
        </div>
    </ul>
<% end %>
<div class="row">
    <div class="mx-auto">
        <%= will_paginate %>
    </div>
</div>